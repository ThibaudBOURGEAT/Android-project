<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.WhiteActionBar">
        <item name="colorPrimary">@color/whiteColor</item>
    </style>

    <style name="AppTheme.GreenActionBar">
        <item name="colorPrimary">@color/greenColor</item>
    </style>

    <style name="AppTheme.OrangeActionBar">
        <item name="colorPrimary">@color/orangeColor</item>
    </style>

    <style name="AppTheme.PurpleActionBar">
        <item name="colorPrimary">@color/purpleColor</item>
    </style>

    <style name="AppTheme.YellowActionBar">
        <item name="colorPrimary">@color/yellowColor</item>
    </style>

    <color name="whiteColor">#fff</color>
    <color name="greenColor">#009e0f</color>
    <color name="orangeColor">#ff9900</color>
    <color name="purpleColor">#9900ff</color>
    <color name="yellowColor">#ffff00</color>
    <color name="blueColor">#0000FF</color>
    <color name="redColor">#ff0000</color>
    <color name="blackColor">#000</color>
</resources>
